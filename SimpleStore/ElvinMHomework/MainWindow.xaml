<Window x:Class="ElvinMHomework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElvinMHomework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Name" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Row="1" Content="Description" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Row="2" Content="Price" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Row="3" Content="Enter:" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBox Name="NameTextBox" Grid.Column="1" Background="Beige"/>
        <TextBox Name="DescriptionTextBox" Grid.Column="1" Grid.Row="1" Background="Beige"/>
        <TextBox Name="PriceTextBox" Grid.Column="1" Grid.Row="2" Background="Beige"/>


    </Grid>
</Window>
